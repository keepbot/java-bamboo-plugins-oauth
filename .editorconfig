root = true

[**]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.bash, ]
indent_size = 2
max_line_length = 80

[*.ftl]
indent_size = 2
max_line_length = 80

[*.js]
indent_size = 2
max_line_length = 80

[*.java]
indent_size = 2
max_line_length = 100

[*.html]
indent_size = 2

[*.py]
max_line_length = 80

[*.ts]
indent_size = 2
max_line_length = 80
