<?xml version="1.0" encoding="UTF-8"?>

<atlassian-plugin key="${atlassian.plugin.key}" name="${project.name}" plugins-version="2">
    <plugin-info>
        <description>${project.description}</description>
        <version>${project.version}</version>
        <vendor name="${project.organization.name}" url="${project.organization.url}"/>
        <param name="plugin-icon">images/pluginIcon.png</param>
        <param name="plugin-logo">images/pluginLogo.png</param>
    </plugin-info>

    <!-- I18N Resources -->
    <resource type="i18n" name="i18n" location="oauth"/>

    <xwork name="OAuth Login Actions" key="oauth-login-actions">
        <package name="OauthAdmin" extends="admin" namespace="/admin/oauth">
            <action name="OpenSettings" class="keepbot.bamboo.plugins.oauth.OpenSettings">
				<result name="success" type="freemarker">/templates/settings.ftl</result>
				<result name="error" type="freemarker">/templates/error.ftl</result>
			</action>
		</package>
	</xwork>

    <!-- Web Resources -->
    <web-resource key="oauth-resources" name="OAuth Web Resources">
        <dependency>com.atlassian.auiplugin:ajs</dependency>
        <resource type="download" name="oauth.css" location="/css/oauth.css"/>
        <resource type="download" name="oauth.js" location="/js/oauth.js"/>
        <resource type="download" name="images/" location="/images"/>
        <context>oauth</context>
    </web-resource>

    <!-- Configuration menu -->
    <web-section name="OAuth Web Section" key="oauth" location="system.admin" weight="100">
        <label key="OAuth" />
    </web-section>

    <web-item name="OAuth Login Settings" i18n-name-key="settings.name" key="settings" section="system.admin/oauth" weight="1000">
        <description key="settings.description">OAuth Login Settings</description>
        <label key="settings.label"></label>
        <link linkId="settings-link">/admin/oauth/OpenSettings.action</link>
    </web-item>

</atlassian-plugin>
